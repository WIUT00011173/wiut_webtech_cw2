<%- include('../includes/head.ejs') %>
    </head>

    <body>
        <%- include('../includes/navigation.ejs') %>

            <main class="main-section container">
                <form action="/edit-job/<%= job._id %>" method="POST">
                    <div class="form-group">
                        <label for="companyName">Company Name</label>
                        <input value="<%= job.companyName %>" type="text" required name="companyName" class="form-control" id="companyName" placeholder="example...">
                    </div>
                    <div class="form-group">
                        <label for="workType">Work Type</label>
                        <input value="<%= job.workType %>" type="text" required name="workType" class="form-control" id="workType" placeholder="part time/ full time">
                    </div>
                    <div class="form-group">
                        <label for="requirement">Job Requirement</label>
                        <input value="<%= job.requirement %>" type="text" required name="requirement" class="form-control" id="requirement" placeholder=".......">
                    </div>
                    <div class="form-group">
                        <label for="jobDescription">Job description</label>
                        <input value="<%= job.jobDescription %>" type="text" required name="jobDescription" class="form-control" id="jobDescription" placeholder=".......">
                    </div>
                    <div class="form-group">
                        <label for="aboutCompany">About Company</label>
                        <input value="<%= job.aboutCompany %>" type="text" required name="aboutCompany" class="form-control" id="aboutCompany" placeholder=".......">
                    </div>
                    <button type="submit" class="btn btn-primary">Submit</button>
                </form>
            </main>
            <%- include('../includes/end.ejs') %>